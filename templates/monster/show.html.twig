{% extends 'navbar.html.twig' %}

{% block title %}Monster{% endblock %}

{% block body %}
	<turbo-frame id="monster-details-content">
		<div class="monster-detail-card">
			<h1>{{ monster.name }}</h1>
			{# todo reste de la fiche monstre #}
			<hr class="mb-2 mt-2">
			<p><strong>Classe d'armure</strong> {{ monster.ac }}</p>
			<p><strong>Points de vie</strong> {{ monster.hp }}</p>
			<p><strong>Vitesse</strong> {{ monster.speed }}</p>
			<hr class="mb-2 mt-2">
			<div class="d-flex justify-content-between">
				<div class"d-flex flex-column">
					<p><strong>FOR</strong></p> 
					<p class="text-center">{{ monster.strength }}</p>
				</div>
				<div class"d-flex flex-column">
					<p><strong>DEX</strong></p> 
					<p class="text-center">{{ monster.dexterity }}</p>
				</div>
				<div class"d-flex flex-column">
					<p><strong>CON</strong></p> 
					<p class="text-center">{{ monster.constitution }}</p>
				</div>
				<div class"d-flex flex-column">
					<p><strong>INT</strong></p> 
					<p class="text-center">{{ monster.intelligence }}</p>
				</div>
				<div class"d-flex flex-column">
					<p><strong>SAG</strong></p> 
					<p class="text-center">{{ monster.wisdom }}</p>
				</div>
				<div class"d-flex flex-column">
					<p><strong>CHA</strong></p> 
					<p class="text-center">{{ monster.charisma }}</p>
				</div>
			</div>
			<hr class="mb-2 mt-2">
			<p><strong>Puissance</strong> {{ monster.difficulty }}</p>
		</div>
		{# <a href="{{ path('app_monster_edit', {'id': monster.id}) }}">edit</a> #}
	</turbo-frame>
{% endblock %}
