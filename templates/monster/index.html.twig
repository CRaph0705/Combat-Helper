{% extends 'navbar.html.twig' %}

{% block title %}Bestiaire{% endblock %}

{% block body %}
	<h1>Bestiaire</h1>

	
	<div class="button-container">
		<a href="{{ path('app_monster_new') }}"><button class="btn btn-new-unit">Create new monster</button></a>
	</div>

	<div class="search-bar mb-2" data-controller="monster-index">{# search bar #}
		<input type="text" id="monsterSearch" class="search-bar-input" placeholder="Rechercher un monstre" data-action="input->monster-index#filterMonsters">
	</div>
	<div class="monster-index-container d-flex">

		
		<div class="monster-index-list">
			<div class="scrollable">
				<!-- Liste des monstres avec un défilement indépendant -->
				<ul>
					{% for monster in monsters %}
						<div class="ripped-paper mb-2">
							<div class="monster monster-parchment" data-id="{{ monster.id }}" data-src="{{ path('app_monster_show',{'id': monster.id}) }}" data-name="{{ monster.name|lower }}">
								<h2 class="mb-2 d-flex justify-content-center">{{ monster.name }}</h2>
								<div class="d-flex justify-content-between mx-5">
									<div class"d-flex flex-column">
										<p><strong>FP</strong></p>{# facteur de puissance #}
										<p>{{ monster.challenge }}</p>
									</div>

									<div class"d-flex flex-column">
										<p><strong>CA</strong></p>
										<p>{{ monster.ac }}</p>
									</div>

									<div class"d-flex flex-column">
										<p><strong>PV</strong></p>
										<p>{{ monster.hp }}</p>
									</div>
								</div>
							</div>
						</div>
					{% endfor %}
				</ul>
			</div>
		</div>	
	
		<div class="monster-details scrollable">
			<turbo-frame id="monster-details-content" src=""></turbo-frame>
		</div>
	</div>
{% endblock %}
{# class="flex-column" #}
