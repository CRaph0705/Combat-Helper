{% extends 'base.html.twig' %}
{% block title %}Initiatives !
{% endblock %}
{% block body %}
	<h1>Roll initiative !</h1>
	<div class="container encounter-nav">
		<nav>
			<a href="{{ path('app_encounter_show', {'id': encounter.id}) }}">Back</a>
			<a href="{{ path('app_encounter_index') }}">Encounter</a>
		</nav>
	</div>


	<div data-controller="encounter">

		<div class="container encounter-menu">
			<div class="row">
				<div class="col-md-6">
					<h1>Encounter
						{{ encounter.shortName }}</h1>
				</div>
				<div class="col-md-6">
					<div class="encounter-menu__buttons">
						{# ERASE INIT #}
						{# <a href="{{ path('app_encounter_init', {'id': encounter.id}) }}">
																									<button class="btn btn-primary">Reset Initiatives</button>
																								</a> #}
							<button class="btn btn-danger" data-action="click->encounter#resetInitiatives"> Reset Initiatives</button>


						{# ROLL MONSTERS INITIATIVES #}
						<button class="btn btn-primary" data-action="click->encounter#rollMonstersInitiatives">Roll Monsters Initiatives</button>

						{# <button class="btn btn-primary" data-action="click->encounter#rollMonstersInitiatives" data-target="encounter.monsters" data-monsters="{{ monsters|json_encode }}">Roll Monsters Initiatives</button> #}

					{# START ENCOUNTER #}
						{# <button class="btn btn-primary" data-action="encounter#startEncounter">Start Encounter</button> #}
					</div>
				</div>
			</div>
		</div>


		<div class="container encounter-content" id="unitContainer" data-encounter-target="unitContainer">
			{% for unit in units %}
				{% if unit in monsters %}
					<div class="unit d-flex flex-row" data-monster="true">
						<div class="unit__name">
							{{ unit.name }}
						</div>
						<div class="unit__initiative">
							<label for="initiative">Initiative :</label>
							<input value="{{ unit.initiative }}" placeholder="initiative" type="number" class="initiative" data-id="initiative_{{ unit.id }}">
						</div>
						<div class="unit__AC">
							<label for="ac">AC :</label>
							<input value="{{ unit.ac }}" placeholder="ac" type="number" class="ac">
						</div>
						{# unit.current-hp #}
						<div class="unit__currentHP">
							<label for="hp">HP :</label>
							<input value="{{ unit.hp }}" placeholder="hp" type="number" class="hp">
						</div>
					</div>
				{% else %}
					<div class="unit d-flex flex-row">
						<div class="unit__name">
							{{ unit.name }}
						</div>
						<div class="unit__initiative">
							<label for="initiative">Initiative :</label>
							<input value="{{ unit.initiative }}" placeholder="initiative" type="number" class="initiative">
						</div>
						<div class="unit__AC">
							<label for="ac">AC :</label>
							<input value="{{ unit.ac }}" placeholder="ac" type="number" class="ac">
						</div>
						{# unit.current-hp #}
						<div class="unit__currentHP">
							<label for="hp">HP :</label>
							<input value="{{ unit.hp }}" placeholder="hp" type="number" class="hp">
						</div>
					</div>
				{% endif %}

			{% endfor %}
		</div>

	</div>
{% endblock %}
