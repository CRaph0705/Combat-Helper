{% extends 'navbar.html.twig' %}

{% block title %}Encounter{% endblock %}

{% block body %}
    <h1>Encounter</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ encounter.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ encounter.name }}</td>
            </tr>
            <tr>
                <th>Players</th>
                <td>
                    {% for player in players %}
                        {{ player.name }}
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Monsters</th>
                <td>
                    {% for monster in monsters %}
                        {{ monster.name }}
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_encounter_index') }}">back to list</a>

    <a href="{{ path('app_encounter_edit', {'id': encounter.id}) }}">edit</a>

    {{ include('encounter/_delete_form.html.twig') }}
{% endblock %}
