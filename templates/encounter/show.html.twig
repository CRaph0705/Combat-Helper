{% extends 'navbar.html.twig' %}

{% block title %}Encounter{% endblock %}

{% block body %}
    <h1>Encounter</h1>

    <div class="encounter-show">
        <div class="encounter-infos"> ID : {{ encounter.id }} - Name : {{ encounter.shortName }}</div>
        <div class="encounter-units">
            <div class="left-column">
                <div>Players</div>
                <div>
                    {% for player in players %}
                        <div>{{ player.name }}</div>
                    {% endfor %}
                </div>
            </div>

            <div class="right-column">
                <div>Monsters</div>
                <div>
                    {% for monster in monsters %}
                        <div>{{ monster.name }}</div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
    <a href="{{ path('app_encounter_index') }}">back to list</a>

    <a href="{{ path('app_encounter_edit', {'id': encounter.id}) }}">edit</a>

    {{ include('encounter/_delete_form.html.twig') }}
{% endblock %}
