{% extends 'base.html.twig' %}

{% block title %}EncounterList index{% endblock %}

{% block body %}
    <h1>EncounterList index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>IsPcList</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for encounter_list in encounter_lists %}
            <tr>
                <td>{{ encounter_list.id }}</td>
                <td>{{ encounter_list.name }}</td>
                <td>{{ encounter_list.isPcList ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_encounter_list_show', {'id': encounter_list.id}) }}">show</a>
                    <a href="{{ path('app_encounter_list_edit', {'id': encounter_list.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_encounter_list_new') }}">Create new</a>
{% endblock %}
