{% extends 'base.html.twig' %}

{% block title %}EncounterList{% endblock %}

{% block body %}
    <h1>EncounterList</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ encounter_list.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ encounter_list.name }}</td>
            </tr>
            <tr>
                <th>IsPcList</th>
                <td>{{ encounter_list.isPcList ? 'Yes' : 'No' }}</td>
            </tr>

            <tr>
                <th>{{ encounter_list.isPcList ? 'Players' : 'Monsters' }}</th>
                {# boucle pour afficher les joueurs ou les monstres dans la liste selon le isPcList #}
                {% if listCategory == 'Players' %}
                    {% for playerCharacter in listContent %}
                        <td>{{ playerCharacter.name }}</td>
                        {# button remove from this list #}
                        <td>
                            <a href="{{ path('app_encounter_list_remove', {'id': encounter_list.id, 'playerId': playerCharacter.id}) }}">X</a>
                        </td>
                    {% endfor %}
                {% else %}
                    {% for monster in listContent %}
                        <td>{{ monster.name }}</td>
                    {% endfor %}
                {% endif %}
            <tr>
        </tbody>
    </table>

    <a href="{{ path('app_encounter_list_index') }}">back to list</a>

    <a href="{{ path('app_encounter_list_edit', {'id': encounter_list.id}) }}">edit</a>

    {{ include('encounter_list/_delete_form.html.twig') }}
{% endblock %}
